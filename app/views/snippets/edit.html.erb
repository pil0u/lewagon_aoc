<h2 class="flex flex-wrap gap-x-6">
  <span class="strong">Solutions</span>
  <span>·</span>
  <%= link_to "Day #{@snippet.day}", day_path(@snippet.day), class: "link-explicit link-internal" %>
  <span>·</span>
  <span>Part <%= @snippet.challenge %></span>
</h2>

<%= form_with model: @snippet, url: update_snippet_path(id: @snippet.id), class: "my-8 w-full flex flex-col gap-y-2" do |f| %>
  <%= f.text_area :code, placeholder: @text_area_placeholder, rows: 8, class: "w-full text-sm resize input", wrap: :off %>
  <div class="flex gap-x-2">
    <%= f.select(:language, Snippet::LANGUAGES.invert.to_a, { prompt: "What language?", selected: @snippet.language }, class: "input", disabled: true) %>
    <%= f.submit "Submit", class: "w-fit self-end button" %>
  </div>
<% end %>
