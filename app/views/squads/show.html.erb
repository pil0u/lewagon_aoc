<div class="my-4 text-xl flex flex-wrap flex-col sm:flex-row items-center sm:justify-between">
  <div class="flex flex-wrap gap-x-6">
    <h2 class="strong"><%= @squad.name %></h2>
    <span>Â·</span>
    <span><%= pluralize(@squad_stats[:total_members], "member") %></span>
  </div>

  <div class="flex gap-x-6">
    <span>
      <% if @squad_stats[:silver_stars] > 0 %>
        <span class="text-aoc-silver"><%= @squad_stats[:silver_stars] %>*</span>
      <% end %>
      <span class="text-aoc-gold"><%= @squad_stats[:gold_stars] %>*</span>
    </span>
  </div>
</div>

<table class="my-4 block overflow-x-auto whitespace-nowrap w-full max-w-2xl mx-auto">
  <thead>
    <tr class="border-b border-aoc-gray-darker">
      <th class="font-light min-w-[3rem] lg:min-w-[4rem]"></th>
      <th class="font-light min-w-[12rem] lg:min-w-[16rem] w-full"></th>
      <th class="font-light min-w-[6rem]">Score</th>
      <th class="font-light min-w-[6rem]">Stars</th>
      <th class="font-light min-w-[6rem]">Daily score</th>
    </tr>
  </thead>

  <tbody>
    <%= render Scores::UserRowComponent.with_collection(@squad_users, user: current_user) %>
  </tbody>
</table>
