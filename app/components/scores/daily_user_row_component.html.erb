<tr class="hover:bg-hover <%= "bg-aoc-green bg-opacity-20" if @participant[:uid] == @user.uid %>">
  <td>
    <%= link_to profile_path(@participant[:uid]), class: "flex justify-center items-center" do %>
      <%= @participant[:username] %>
      <%= image_tag("aoc.gif", class: "w-5 h-5 ml-2") if @participant[:uid].in?(User::CONTRIBUTORS.values) %>
    <% end %>
  </td>

  <td>
    <%= link_to profile_path(@participant[:uid]), class: "flex justify-center" do %>
      <%= duration_as_text(@participant[:part_1]) %>
    <% end %>
  </td>

  <td>
    <%= link_to profile_path(@participant[:uid]), class: "flex justify-center" do %>
      <%= duration_as_text(@participant[:part_2]) %>
    <% end %>
  </td>

  <td>
    <%= link_to profile_path(@participant[:uid]), class: "flex justify-center" do %>
      <%= @participant[:score] %>
    <% end %>
  </td>
</tr>
